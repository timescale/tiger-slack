      "options": {
        "cwd": "${workspaceFolder}/mcp"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Tiger-Slack MCP - Build Only",
      "dependsOrder": "sequence",
