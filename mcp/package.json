{
  "name": "tiger-slack-mcp-server",
  "version": "0.2.0",
  "description": "MCP server to expose an API around your Slack database",
  "license": "Apache-2.0",
  "author": "Timescale, Inc.",
  "homepage": "https://github.com/timescale/tiger-slack",
  "type": "module",
  "bin": {
    "tiger-slack-mcp-server": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "watch:http": "tsx watch src/index.ts http",
    "start": "node dist/index.js stdio",
    "start:http": "node dist/index.js http",
    "inspector": "npx @modelcontextprotocol/inspector",
    "lint": "eslint",
    "lint:fix": "eslint --fix"
  },
  "dependencies": {
    "@tigerdata/mcp-boilerplate": "^0.2.0",
    "dotenv": "^17.2.0",
    "pg": "^8.16.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^22.16.4",
    "@types/pg": "^8.15.4",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "shx": "^0.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.43.0"
  }
}
